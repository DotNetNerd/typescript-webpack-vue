{
    "compilerOptions": {
      "module": "commonjs",
      // "outDir": "declarations",
      "declaration": true,
      "noImplicitAny": true,
      "noEmitOnError": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "strictNullChecks": true,
      "lib": [ "es2015", "dom" ],
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
    },
    "include": [
      "**/*"
    ]
  }